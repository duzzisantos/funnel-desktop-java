<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CRMApplicationDesktopPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>crmapplicationdesktop.entity.Campaignenrollments</class>
    <class>crmapplicationdesktop.entity.Accountmanagers</class>
    <class>crmapplicationdesktop.entity.Campaigns</class>
    <class>crmapplicationdesktop.entity.Customers</class>
    <class>crmapplicationdesktop.entity.Products</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/CRMDatabase"/>
      <property name="javax.persistence.jdbc.user" value="CRMDB"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="CRMDB"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
